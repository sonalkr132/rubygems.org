<% @title = t("adoptions.index.adoptions") %>

<div class="l-overflow">
  <div class="l-colspan--l">
    <%= render layout: "adoptions/list", locals: { adoptions: @adoptions, heading: t(".open_adoptions") } do |adoption| %>
      <%= link_to adoption.rubygem.name, rubygem_path(adoption.rubygem.name), class: "t-link--black t-list__item" %>
    <% end %>

    <%= render layout: "adoption_applications/list", locals: { adoption_applications: @adoption_applications, heading: t(".requested_adoptions") } do |adoption_application| %>
      <%= link_to adoption_application.rubygem.name, rubygem_path(adoption_application.rubygem.name), class: "t-link--black t-list__item" %>
    <% end %>
  </div>
</div>
