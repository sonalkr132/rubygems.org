<% @title = "New Api key" %>

<div class="t-body">
  <%= form_for @api_key, url: profile_api_keys_path do |f| %>
    <%= label_tag :name, "Name", class: "form__label" %>
    <%= f.text_field :name, class: "form__input", autocomplete: :off %>

    <%= label_tag :scope, "Scope", class: "form__label" %>
    <% Gemcutter::API_SCOPES.each do |api_scope| %>
      <div class = "form__checkbox__item">
        <%= f.check_box "#{api_scope}", { class: "form__checkbox__input" } , "true", "false" %>
        <%= label_tag api_scope, t(".#{api_scope}"), class: "form__checkbox__label" %>
      </div>
    <% end %>

    <%= f.submit 'Create', class: 'form__submit' %>
  <% end %>
</div>
