<%= form_for adoption_application, url: rubygem_adoption_application_path(adoption_application.rubygem, adoption_application), method: :patch do |form| %>
  <%= form.hidden_field :status, value: status %>
  <%= form.submit button_text , class: "form__submit form__submit--small #{"form__submit--left" if status == "approved"}" %>
<% end %>
